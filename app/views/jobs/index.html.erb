    <!-- movie-list -->
      <section id="movie-list" class="wrapper style1 fade-up">
        <div class="inner">
          <h2>Movie List</h2>
          <p>See all your jobs below. You can edit or remove jobs from your job list.</p>
          <div class="style1" style="height:600px;overflow-y:auto;">
            <section>
              <table id="movie-list-table" class="table">
                <thead>
                  <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Job Type</th>
                    <th>Description</th>
                    <th>Timeline</th>
                    <th>Price</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% @job.each do |j| %>
                        <tr id="row-<%= j.id %>">
                          <td id="first-name-<%= j.id %>"><%= j.first_name %></td>
                          <td id="last-name-<%= j.id %>"><%= j.last_name %></td>
                          <td id="email-<%= j.id %>"><%= j.email %></td>
                          <td id="job-type-<%= j.id %>"><%= j.job_type %></td>
                          <td id="description-<%= j.id %>"><%= j.description %></td>
                          <td id="timeline-<%= j.id %>"><%= j.timeline %></td>
                          <td id="price-<%= j.id %>"><%= j.price %></td>
                          <td>
														<button type="button" onclick="destroyMovie(<%= j.id %>);" class="btn btn-danger">Delete</button>
														<div id="delete-error-msg-<%= j.id %>" class='error-msg' style="display:none;">
															Could not delete job.
														</div>
													</td>
                        </tr>
                     <% end %>
                </tbody>
             </table>
            </section>
          </div>
        </div>
      </section>
