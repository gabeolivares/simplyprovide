    <!-- Create -->
      <section id="create" class="wrapper style2 spotlights">
        <section>
          <div class="content">
            <div class="inner">
              <h2 style="color:#000">Create a Job</h2>
              <p style="color:#000">
                Please enter information about your job in the form below and press 'Create Job'.
                Once your Job is created we will process and email you with updates.
              </p>
              <form onsubmit="createJob();;return false;" id="create-job-form">
                <div class="field half first">
                  <label for="first-name">First Name</label>
                  <input type="text" name="first-name" id="first-name" required />
                </div>
                <div class="field half">
                  <label for="last-name">Last Name</label>
                  <input type="text" name="last-name" id="last-name" required />
                </div>
                <div class="field half first">
                  <label for="email">Email</label>
                  <input type="text" name="email" id="email" required />
                </div>
                <div class="field half">
                  <label for="job-type">Job Type</label>
                  <input type="text" name="job-type" id="job-type" required />
                </div>
                <div class="field half first">
                  <label for="desc">Description</label>
                  <input type="text" name="desc" id="desc" required />
                </div>
                <div class="field half">
                  <label for="desired-timeline">Desired Timeline</label>
                  <input type="text" name="desired-timeline" id="desired-timeline" required />
                </div>
                <div class="field half first">
                  <label for="price">Price</label>
                  <input type="text" name="price" id="price" required />
                </div>
                <div class="field half">
                  <!-- <label for="photo">Photo</label>
                  <input type="text" name="photo" id="photo" required /> -->
                </div>
                <ul class="actions field half submit-create">
                  <button type="submit"  class="button submit" required> Create Job</button>
                </ul>
              </form>
              <div id="create-empty-msg" class='error-msg' style="display:none;">
                Please make sure all the fields are completeled.
              </div>
              <div id="create-error-msg" class='error-msg' style="display:none;">
                Unable to create job.
              </div>
              <div id="create-success">
              </div>
            </div>
          </div>
        </section>
      </section>

